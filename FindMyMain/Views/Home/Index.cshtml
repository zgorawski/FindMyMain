@using FindMyMain.ViewModel
@model HomePageViewModel

<div class="jumbotron vertical-center fullBackground">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <img class="img-responsive fmm-width100percent" src="~/Content/Images/logo.png" />
            </div>
        </div>
        <div class="row margin-top-15">
            <div class="col-md-12">
                @using (Html.BeginForm("Play", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 padding-0">
                                @Html.TextBoxFor(m => m.PlayerInput.SummonerName, new { @class = "fmm-w100h40 fmm-input", @placeholder = "summoner name" })
                            </div>
                            <div class="col-md-3 padding-media">
                                @Html.DropDownListFor(m => m.PlayerInput.Region, Model.AvailableRegions, new { @class = "fmm-w100h40 fmm-input" })
                            </div>
                            <div class="col-md-3 padding-0">
                                <button type="submit" class="fmm-w100h40 fmm-playButton">Play</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="row">
                    <div class="col-md-12">
                        <p class="fmm-error">@Model.Error</p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<footer class="footer">
    <div class="container">
