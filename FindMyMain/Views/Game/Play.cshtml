@using FindMyMain.Extensions
@model FindMyMain.ViewModel.GameViewModel

@{
    ViewBag.Title = "Play";
}

<div class="container">
    <div class="row">
        <div class="col-md-4" id="fmm-chat">

            <h2>Play</h2>

            <p>
                Try to guess who is the main chapion of: @Model.FellowPlayerName. She/he played
                @if (@Model.SameTeam)
            {
                    <span>with</span>
                }
                else
                {
                    <span>against</span>
                } you as @Model.FellowPlayedChampionName (you've played @Model.PlayerChampionName)
                @if (Model.NGamesAgo == 1)
            {
                    <span>in last game</span>
                }
                else
                {
                    <span>@Model.NGamesAgo games ago</span>
                }
            </p>

        </div>
        <div class="col-md-8">


            <p><input type="text" id="fmm-filter" placeholder="Search" /></p>

            <div id="fmm-grid">
                @foreach (var champion in Model.Champions)
            {
                string championImageUrl = "http://ddragon.leagueoflegends.com/cdn/" + Model.GameVersion + "/img/champion/" + champion.image.full;

                    @Ajax.ImageActionLink(championImageUrl, champion.name, champion.id, "SelectedChampion", new { championId = champion.id }, new AjaxOptions() { OnSuccess = "processAnswer" });
            }
            </div>

        </div>
    </div>
</div>